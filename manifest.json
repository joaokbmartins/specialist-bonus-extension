{
  "manifest_version": 3,
  "name": "Specialist Bonus",
  "description": "All Specialist Perks Active",
  "version": "1.0",
  "icons": {
    "128": "images/icon-128.png",
    "48": "images/icon-48.png",
    "32": "images/icon-32.png",
    "16": "images/icon-16.png"
  },
  "background": { "service_worker": "scripts/remove-amazon-main-carrousel.js" },
  "action": {
    "default_icon": {
      "128": "images/icon-128.png",
      "48": "images/icon-48.png",
      "32": "images/icon-32.png",
      "16": "images/icon-16.png"
    }
  },
  "permissions": ["activeTab", "scripting"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+U",
        "mac": "Alt+U"
      }
    }
  }
}
